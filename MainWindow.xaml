<Window x:Class="SequenceMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SequenceMaker"
        mc:Ignorable="d"
        Title="Sequence Maker" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label>n[0] = </Label>
            <TextBox Height="20" Name="txt_n0" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>n[i] =</Label>
            <TextBox Height="20" Name="txt_A" Width="100" />
            <Label>* n[i-1] + </Label>
            <TextBox Height="20" Name="txt_B" Width="100" />
        </StackPanel>
        <Button Content="Generate" Click="Button_Click" Name="generator" />
        <TextBlock Name="resultTextBlock" Text="Result" />
    </StackPanel>
</Window>
